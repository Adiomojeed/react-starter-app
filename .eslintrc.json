{
    "extends": [
        "airbnb-base",
        "prettier",
        "prettier/react",
        "plugin:import/errors",
        "plugin:react/recommended",
        "plugin:jsx-a11y/recommended",
        "plugin:react-hooks/recommended"
    ],
    "plugins": ["prettier", "import", "jsx-a11y", "react", "react-hooks"],
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "rules": {
        "no-var": 2,
        "semi": 0,
        "func-style": 2,
        "no-console": 2,
        "no-unused-expressions": 0,
        "no-plusplus": 2
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
